<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/premium_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAbout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/premium_dark"
        app:title="About"
        app:titleTextColor="@color/premium_gold"
        app:navigationIcon="@android:drawable/ic_media_previous"
        app:navigationIconTint="@color/white" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <TextView
            android:id="@+id/textAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Restaurant Guide\n\nGroup Members:\n- Yousuf Salihi\n- Bryan Paul Yabut\n- Patrick Sherwin Millares\n\nCourse: COMP 3074\nCollege: George Brown College\n\nThis app helps you organize your favorite restaurant spots, view their locations on the map, and share recommendations with friends."
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:padding="24dp"
            android:textColor="@color/premium_text_primary"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>